# ===========================================
# ByteHub Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database URL (Postgres with SSL)
DATABASE_URL=postgres://user:password@host:port/dbname?sslmode=require

# Test Database URL (for CI/testing - separate from production)
TEST_DATABASE_URL=postgres://user:password@host:port/test_db?sslmode=require

# GitHub Webhook Secret (generate a random string)
# Use: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Discord Configuration
# Get these from https://discord.com/developers/applications
DISCORD_PUBLIC_KEY=your_public_key_from_discord_portal
DISCORD_BOT_TOKEN=your_full_bot_token
DISCORD_APPLICATION_ID=your_application_id

# Discord Invite Link (optional)
# Bot permissions: Manage Channels, Send Messages, Embed Links, etc.
DISCORD_INVITE=https://discord.com/oauth2/authorize?client_id=YOUR_APP_ID&permissions=326417599504&integration_type=0&scope=bot

# Server Configuration
HOST=0.0.0.0
PORT=3000
